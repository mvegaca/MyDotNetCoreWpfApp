<Page
    x:Class="MyDotNetCoreWpfApp.Views.SchemeActivationSamplePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:strings="clr-namespace:MyDotNetCoreWpfApp.Strings"
    Style="{DynamicResource MahApps.Styles.Page}"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800">
    <Page.Resources>
        <DataTemplate x:Key="ActivationParameterDateTemplate">
            <TextBlock
                Text="{Binding}"
                Style="{StaticResource BodyTextStyle}" />
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Style="{StaticResource PageTitleStyle}"
            Margin="{StaticResource MediumLeftMargin}"
            Text="{x:Static strings:Resources.SchemeActivationSamplePageTitle}" />
        <ScrollViewer Grid.Row="1" Margin="{StaticResource SmallTopBottomMargin}">
            <ItemsControl
                Margin="{StaticResource MediumLeftTopRightBottomMargin}"
                ItemsSource="{Binding Parameters}"
                ItemTemplate="{StaticResource ActivationParameterDateTemplate}" />
        </ScrollViewer>
    </Grid>
</Page>
